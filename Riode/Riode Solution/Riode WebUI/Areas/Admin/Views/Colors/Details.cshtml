@model Color

@{
    ViewData["Title"] = "Details";
}

<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-12">
                        <h2 class="text-center">Brand <b>Details</b></h2>
                    </div>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover">

            <tbody>
                <tr>
                    <th>HexCode</th>
                    <td>
                        <span class="hexcode p-2" style="background-color: rgb(0, 0, 0);">@Model.HexCode</span>
                    </td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>@Model.Description</td>
                </tr>
                <tr>
                    <th>Created User</th>
                    <td>@Model.CreatedByUserId</td>
                </tr>
                <tr>
                    <th>Created Date</th>
                    <td>@Model.CreatedDate</td>
                </tr>
                <tr>
                    <th>Deleted User</th>
                    <td>@Model.DeletedByUserId</td>
                </tr>
                <tr>
                    <th>Deleted Date</th>
                    <td>@Model.DeletedDate</td>
                </tr>
            </tbody>
        </table>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" asp-controller="Colors" class="edit"><i class="fa fa-edit" data-toggle="tooltip" title="Edit"></i></a>
            |
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>




