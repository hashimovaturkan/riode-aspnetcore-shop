@model Faq

@{
    ViewData["Title"] = "Details";
}

<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-12">
                        <h2 class="text-center">Faq <b>Details</b></h2>
                    </div>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover">
            <tbody>
                <tr>
                    <th>Question</th>
                    <td>@Model.Question</td>
                </tr>
                <tr>
                    <th>Answer</th>
                    <td>@Model.Answer</td>
                </tr>
                <tr>
                    <th>Created User</th>
                    <td>@Model.CreatedByUserId</td>
                </tr>
                <tr>
                    <th>Created Date</th>
                    <td>@Model.CreatedDate</td>
                </tr>
                <tr>
                    <th>Deleted User</th>
                    <td>@Model.DeletedByUserId</td>
                </tr>
                <tr>
                    <th>Deleted Date</th>
                    <td>@Model.DeletedDate</td>
                </tr>
            </tbody>
        </table>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" asp-controller="Faqs" class="edit"><i class="fa fa-edit" data-toggle="tooltip" title="Edit"></i></a>
            |
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
