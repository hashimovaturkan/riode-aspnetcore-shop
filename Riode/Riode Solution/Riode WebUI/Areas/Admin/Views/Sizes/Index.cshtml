@model IEnumerable<Size>

@{
    ViewData["Title"] = "Index";
}

<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2>Product <b>Sizes</b></h2>
                    </div>
                    <div class="col-sm-6">
                        <a asp-action="Create" asp-controller="Sizes" class="btn btn-success" ><i class="fa fa-plus "></i> <span>Add New Size</span></a>
                        <a asp-action="Delete" asp-controller="Sizes" class="btn btn-danger" ><i class="fa fa-trash"></i> <span>Delete</span></a>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            <span class="custom-checkbox">
                                <input type="checkbox" id="selectAll">
                                <label for="selectAll"></label>
                            </span>
                        </th>
                        <th>Abbr</th>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
	                {
                        <tr>
                            <td class="check-content">
                                <span class="custom-checkbox">
                                    <input type="checkbox" id="checkbox-@item.Id" name="options[]" value="1">
                                    <label for="checkbox-@item.Id"></label>
                                </span>
                            </td>
                            <td>@item.Abbr</td>
                            <td>@item.Name</td>
                            <td class="crud-btn">
                                <a asp-action="Edit" asp-route-id="@item.Id" asp-controller="Sizes" class="edit" ><i class="fa fa-edit" data-toggle="tooltip" title="Edit"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" asp-controller="Sizes" class="delete" ><i class="fa fa-trash" data-toggle="tooltip" title="Delete"></i></a>
                                <a asp-action="Details" asp-route-id="@item.Id" asp-controller="Sizes" class="view"><i class="fa fa-eye" data-toggle="tooltip" title="Details"></i></a>
                            </td>
                        </tr>
	                }
                </tbody>
            </table>
            <div class="clearfix">
                <div class="hint-text">Showing <b>5</b> out of <b>25</b> entries</div>
                <ul class="pagination">
                    <li class="page-item disabled"><a href="#">Previous</a></li>
                    <li class="page-item"><a href="#" class="page-link">1</a></li>
                    <li class="page-item"><a href="#" class="page-link">2</a></li>
                    <li class="page-item active"><a href="#" class="page-link">3</a></li>
                    <li class="page-item"><a href="#" class="page-link">4</a></li>
                    <li class="page-item"><a href="#" class="page-link">5</a></li>
                    <li class="page-item"><a href="#" class="page-link">Next</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>






