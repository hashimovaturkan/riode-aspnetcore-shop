@model LoginFormModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>SignIn</title>
    <link rel="stylesheet" href="~/admin/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/admin/css/style.css" />

</head>
<body>
    <div class="main_content_iner ">
        <div class="container-fluid p-0">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <div class="white_box mb_30">
                        <div class="row justify-content-center">
                            <div class="col-lg-4">
                                <!-- sign_in  -->
                                <div class="modal-content cs_modal">
                                    <div class="modal-header justify-content-center theme_bg_1">
                                        <h5 class="modal-title text_white">Log in</h5>
                                    </div>
                                    <div class="modal-body">
                                        <form method="post" asp-controller="Account" asp-action="Login">
                                            <label class="text-danger">@ViewBag.Message</label>
                                            <div class="form-group">
                                                <input type="text" class="form-control" asp-for="UserName" placeholder="Enter your email">
                                                <span asp-validation-for="UserName" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <input type="password" class="form-control" asp-for="Password" placeholder="Password">
                                                <span asp-validation-for="Password" class="text-danger"></span>
                                            </div>
                                            <button class="btn_1 full_width text-center">Log in</button>
                                            <p>Need an account? <a  data-dismiss="modal" asp-controller="Account" asp-action="Register"> Sign Up</a></p>
                                            <div class="text-center">
                                                <a href="#" data-toggle="modal" data-target="#forgot_password" data-dismiss="modal" class="pass_forget_btn">Forget Password?</a>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/libs/jquery/jquery.js"></script>
    <script src="~/admin/js/bootstrap.min.js"></script>
    

</body>
</html>

<environment names="Development">
    <script>
        $(document).ready(function () {
            $("#Password").val("123");
            $("#UserName").val("Turkan");
        });
    </script>
</environment>