@model Riode.Domain.Models.Entities.Category

@{
    ViewData["Title"] = "Delete";
}

<div class="main_content_iner overly_inner ">
    <div class="container-fluid p-0 ">
        <h1>Delete Category</h1>

        <h6>Are you sure you want to delete this?</h6>
        <table class="table">
            <tbody>
                <tr>
                    <th scope="row">Name</th>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <th scope="row">Parent Id</th>
                    <td>@Model.ParentId</td>
                </tr>
                <tr>
                    <th scope="row">Description</th>
                    <td>@Model.Description</td>
                </tr>
                <tr>
                    <th scope="row">User Id (Create)</th>
                    <td>@Model.CreatedByUserId</td>
                </tr>
                <tr>
                    <th scope="row">Created Date</th>
                    <td>@Model.CreatedDate</td>
                </tr>
                <tr>
                    <th scope="row">User Id (Delete)</th>
                    <td>@Model.CreatedDate</td>
                </tr>
                <tr>
                    <th scope="row">Deleted Date</th>
                    <td>@Model.DeletedDate</td>
                </tr>
            </tbody>
        </table>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>


