@model Product

@{
    ViewData["Title"] = "Details";
}


<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-12">
                        <h2 class="text-center"><b>Product</b></h2>
                    </div>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover">

            <tbody>
                <tr>
                    <th>Images</th>
                    <td>
                        @foreach (var item in Model.Images)
                        {
                            <span class="image-box">
                                @if (item.IsMain == true)
                                {
                                    <span class="image-desc">It is main image</span>
                                }
                                <img src="~/uploads/images/product/@item.FileName" width="70" height="70" class="mr-5" />
                            </span>
                        }
                    </td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <th>Sku Code</th>
                    <td>@Model.SkuCode</td>
                </tr>
                <tr>
                    <th>Short Description</th>
                    <td class="blog-content">@Model.ShortDescription</td>
                </tr>
                <tr>
                    <th scope="row">Description</th>
                    <td class="blog-content">@Model.Description</td>
                </tr>
                <tr>
                    <th scope="row">Category</th>
                    <td>@ViewData["CategoryId"]</td>
                </tr>
                <tr>
                    <th scope="row">Brand</th>
                    <td>@ViewData["BrandId"]</td>
                </tr>
                <tr>
                    <th>Created User</th>
                    <td>@Model.CreatedByUserId</td>
                </tr>
                <tr>
                    <th>Created Date</th>
                    <td>@Model.CreatedDate</td>
                </tr>
                <tr>
                    <th>Deleted User</th>
                    <td>@Model.DeletedByUserId</td>
                </tr>
                <tr>
                    <th>Deleted Date</th>
                    <td>@Model.DeletedDate</td>
                </tr>
            </tbody>
        </table>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" asp-controller="BlogPosts" class="edit"><i class="fa fa-edit" data-toggle="tooltip" title="Edit"></i></a>
            |
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>




@section addcss{
    <style>
        .image-box{
            display:inline-block;
            position:relative;
        }
        .image-desc {
            position:absolute;
            top:-10px;
            left:0;
            font-size:12px;
        }
    </style>
}