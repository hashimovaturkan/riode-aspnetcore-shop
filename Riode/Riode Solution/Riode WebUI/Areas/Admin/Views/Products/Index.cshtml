@model IEnumerable<Product>

@{
    ViewData["Title"] = "Index";
}


<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2><b>Products</b></h2>
                    </div>
                    <div class="col-sm-6">
                        <a asp-action="Create" asp-controller="Products" class="btn btn-success"><i class="fa fa-plus "></i> <span>Add New Product</span></a>
                        <a asp-action="Delete" asp-controller="Products" class="btn btn-danger"><i class="fa fa-trash"></i> <span>Delete</span></a>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            <span class="custom-checkbox">
                                <input type="checkbox" id="selectAll">
                                <label for="selectAll"></label>
                            </span>
                        </th>
                        <th>Image</th>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="check-content">
                                <span class="custom-checkbox">
                                    <input type="checkbox" id="checkbox-@item.Id" name="options[]" value="1">
                                    <label for="checkbox-@item.Id"></label>
                                </span>
                            </td>
                            <td>
                                <img width="70" height="70" src="~/uploads/images/product/@item.Images.FirstOrDefault(i=>i.IsMain)?.FileName" />
                            </td>
                            <td>@item.Name</td>
                            <td class="crud-btn">
                                <a asp-action="Edit" asp-route-id="@item.Id" asp-controller="Products" class="edit"><i class="fa fa-edit" data-toggle="tooltip" title="Edit"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" asp-controller="Products" class="delete"><i class="fa fa-trash" data-toggle="tooltip" title="Delete"></i></a>
                                <a asp-action="Details" asp-route-id="@item.Id" asp-controller="Products" class="view"><i class="fa fa-eye" data-toggle="tooltip" title="Details"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="clearfix">

                <ul class="pagination">
                    <li class="page-item "><a asp-action="Index" class="previous-link page-link">Previous</a></li>

                    @for (int i = 1; i <= ViewBag.PageCount; i++)
                    {
                        <li class="page-item"><a asp-action="Index" asp-route-page="@i" class="page-link page-count">@i</a></li>
                    }
                    <li class="page-item"><a asp-action="Index" class="next-link page-link">Next</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>




        
